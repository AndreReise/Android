<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_bg"
    android:orientation="horizontal"
    tools:context=".MainActivity"
    android:baselineAligned="false">

    <LinearLayout
        android:id="@+id/color_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/screen_bg"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/color_plate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15sp"
            android:background="@color/black">

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/regulators_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15sp"
        android:layout_marginBottom="15sp"
        android:layout_weight="2"
        android:background="@color/screen_bg"
        android:orientation="vertical"
        android:paddingTop="2sp"
        android:paddingBottom="2sp">

        <LinearLayout
            android:id="@+id/r_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:ignore="NestedWeights">

            <LinearLayout
                android:id="@+id/r_text_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/r_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:padding="8sp"
                    android:text="R"
                    android:textColor="@color/text_light"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/r_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:padding="8sp"
                    android:text="0"
                    android:textColor="@color/text_light"
                    android:textSize="16sp" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/r_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="false"
                android:max="255"
                android:paddingStart="10sp"
                android:paddingEnd="10sp"
                android:progress="0"
                android:progressTint="@color/progress_tint" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/g_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/g_text_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/g_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:padding="8sp"
                    android:text="G"
                    android:textColor="@color/text_light"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/g_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:padding="8sp"
                    android:text="0"
                    android:textColor="@color/text_light"
                    android:textSize="16sp" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/g_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="false"
                android:max="255"
                android:paddingStart="10sp"
                android:paddingEnd="10sp"
                android:progress="0"
                android:progressTint="@color/progress_tint" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/b_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/b_text_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/b_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:padding="8sp"
                    android:text="B"
                    android:textColor="@color/text_light"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/b_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:padding="8sp"
                    android:text="0"
                    android:textColor="@color/text_light"
                    android:textSize="16sp" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/b_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="false"
                android:max="255"
                android:paddingStart="10sp"
                android:paddingEnd="10sp"
                android:progress="0"
                android:progressTint="@color/progress_tint" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>